{
    "name": "czim/laravel-context-log-library",
    "description": "Library for context logging for Laravel",
    "authors": [
        {
            "name": "Coen Zimmerman",
            "email": "opensource@czim.nl"
        }
    ],
    "keywords": [ "laravel", "monolog", "formatting", "json" ],
    "homepage": "https://github.com/czim",
    "require": {
        "php": "^8.1",
        "czim/laravel-json-context-logging": ">=3.0",
        "illuminate/support": ">=10",
        "psr/log": ">=3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5",
        "orchestra/testbench": "^8"
    },
    "autoload": {
        "psr-4": {
            "Czim\\LaravelContextLogging\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Czim\\LaravelContextLogging\\Test\\Logging\\": "tests"
        }
    },
    "extra": {
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
